<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <bottom>
      <HBox prefHeight="130.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="textbox" alignment="TOP_LEFT" onKeyPressed="#enterPressed" prefHeight="108.0" prefWidth="468.0" scaleX="1.2" translateX="50.0" translateY="3.0">
               <font>
                  <Font name="Arial" size="18.0" />
               </font>
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin></TextField>
            <Button fx:id="button" minWidth="-Infinity" mnemonicParsing="false" onAction="#setUsername" prefHeight="32.0" prefWidth="80.0" text="Submit" translateX="100.0" translateY="60.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin></Button>
            <TextField fx:id="username" prefHeight="25.0" prefWidth="306.0" promptText="Enter username" translateX="-10.0" translateY="10.0">
               <HBox.margin>
                  <Insets left="12.0" />
               </HBox.margin>
               <font>
                  <Font name="Segoe UI" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </TextField>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <TextArea fx:id="chat" editable="false" BorderPane.alignment="CENTER">
         <font>
            <Font name="Arial" size="23.0" />
         </font>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor></TextArea>
   </center>
</BorderPane>
